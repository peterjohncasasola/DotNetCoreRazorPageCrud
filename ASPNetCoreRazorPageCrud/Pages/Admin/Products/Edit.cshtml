@page
@model ASPNetCoreRazorPageCrud.Pages.Admin.Products.EditModel
@{
}
<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Product</h2>
        <form method="post" enctype="multipart/form-data">

            @if (Model.Message.Length > 0)
            {
                <div role="alert" class="alert alert-dismissible fade show @Model.Alert">
                    <strong>@Model.Message</strong>
                    <button type="button" class="btn-close" data-bs-dissmiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductDto.Name" />
                    <span class="text-danger" asp-validation-for="ProductDto.Name"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Brand</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductDto.Brand" />
                    <span class="text-danger" asp-validation-for="ProductDto.Brand"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductDto.Category" />
                    <span class="text-danger" asp-validation-for="ProductDto.Category"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Price</label>
                <div class="col-sm-8">
                    <input class="form-control" type="number" asp-for="ProductDto.Price" />
                    <span class="text-danger" asp-validation-for="ProductDto.Price"></span>
                </div>
            </div>
            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <textarea rows="10" class="form-control" asp-for="ProductDto.Description"></textarea>
                    <span class="text-danger" asp-validation-for="ProductDto.Description"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <img src="/images/products/@Model.Product.ImageFileName" width="150" alt="@Model.Product.ImageFileName" />
                </div>
            </div>
            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductDto.ImageFile" />
                    <span class="text-danger" asp-validation-for="ProductDto.ImageFile"></span>
                </div>
            </div>


            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a role="button" class="btn btn-outline-primary" href="/Admin/Products/Index">Cancel</a>
                </div>
            </div>

        </form>
    </div>
</div>